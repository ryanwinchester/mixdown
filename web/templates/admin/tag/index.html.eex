<h2>Listing tags</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for tag <- @tags do %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= tag.slug %></td>
      <td><%= tag.description %></td>

      <td class="text-right">
        <%= link "Edit", to: admin_tag_path(@conn, :edit, tag), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_tag_path(@conn, :delete, tag), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New tag", to: admin_tag_path(@conn, :new) %>
